{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src/"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
